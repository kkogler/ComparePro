modules = ["nodejs-20", "web"]
run = "npm run dev"

[nix]
channel = "stable-24_05"

[[ports]]
localPort = 3000
externalPort = 5000

[[ports]]
localPort = 3001
externalPort = 3003

[[ports]]
localPort = 5000
externalPort = 80

[[ports]]
localPort = 5001
externalPort = 3002

[[ports]]
localPort = 5002
externalPort = 4200

[[ports]]
localPort = 37595
externalPort = 3001

[[ports]]
localPort = 44703
externalPort = 3000

[workflows]

[[workflows.workflow]]
name = "Start Application"
mode = "sequential"
author = 45098479

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "npm run dev"

[[workflows.workflow]]
name = "Test Production Build"
mode = "sequential"
author = 45098479

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "npm run prod:test"

[deployment]
deploymentTarget = "cloudrun"
# ⚠️ CRITICAL: Removed db:validate from build to prevent Replit's auto-migration detection
# Replit auto-detects Drizzle and runs migrations regardless of .drizzle-kit-skip
# See migrations/MANUAL_MIGRATIONS_ONLY.md for manual migration process
build = "npm ci && npm run build"
run = "NODE_ENV=production PORT=$PORT node dist/index.js"
